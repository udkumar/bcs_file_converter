
<!DOCTYPE html>
<html>
<head>
  <title>Multi</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body> 
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'BCS Converter AAp' , root_path, class: "navbar-brand" %>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to 'Index' , post_attachments_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to 'New Post', new_post_attachment_path %></li>
        <% end %>
        <li><%= link_to 'Contact Us', "" %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to "Sign out", destroy_user_session_path, method: :DELETE %></li>
        <% else %>
          <li><%= link_to "Sign In", new_user_session_path %></li>
          <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2) %>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>

<div class="container" style="margin-top:2%;">
<% if flash.present? %><div class="alert fade in alert-<%= flash.notice ? "success" : "danger" %>" role="alert"><%= flash.notice ? notice : alert %><button class="close" data-dismiss="alert">×</button></div><% end %>

  <%= yield %>

 </div>

<footer class="footer">
  <div class="container">
    <p class="text-muted">© Bridge Connectivity Solutions <%= Time.now.year %></p>
  </div>
</footer>

</body>
</html>
